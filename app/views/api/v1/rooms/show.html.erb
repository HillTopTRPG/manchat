<p style="color: green"><%= notice %></p>

<table id="api_v1_rooms" class='basic-table'>
  <thead>
  <tr>
    <th>id</th>
    <th>Uuid</th>
    <th>Name</th>
    <th>Password</th>
    <th>Last logged in</th>
    <th>created_at</th>
    <th>updated_at</th>
    <th>Delete</th>
  </tr>
  </thead>
  <tbody>
  <%= render @api_v1_room %>
  </tbody>
</table>

<div>
  <%= link_to "Back to rooms", api_v1_rooms_path %>

  <%= form_with(:url => api_v1_rooms_verify_path(@api_v1_room.id), :local => false, :id => 'verify_form') do |f| %>
    <%= f.text_field :password %>
    <%= f.submit "verify" %>
  <% end %>
  <div id="verify-result"></div>
</div>
